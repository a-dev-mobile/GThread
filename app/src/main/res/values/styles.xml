<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bg_main">@color/bg_main_light</item>
        <item name="bg_sub">@color/bg_sub_light</item>

        <item name="bg_text_main">@color/bg_text_main_light</item>
        <item name="bg_text_sub">@color/bg_text_sub_light</item>


    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="bg_main">@color/bg_main_dark</item>
        <item name="bg_sub">@color/bg_sub_dark</item>

        <item name="bg_text_main">@color/bg_text_main_dark</item>
        <item name="bg_text_sub">@color/bg_text_sub_dark</item>


    </style>

    <style name="AppTheme.Light.Blue" parent="AppTheme.Light">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
    </style>

    <style name="AppTheme.Dark.Blue" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
    </style>

    <style name="AppTheme.Light.Cyan" parent="AppTheme.Light">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan_dark</item>
    </style>

    <style name="AppTheme.Dark.Cyan" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan_dark</item>
    </style>

    <style name="AppTheme.Light.Gray" parent="AppTheme.Light">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
    </style>

    <style name="AppTheme.Dark.Gray" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
    </style>

    <style name="AppTheme.Light.Green" parent="AppTheme.Light">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
    </style>

    <style name="AppTheme.Dark.Green" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
    </style>

    <style name="AppTheme.Light.Indigo" parent="AppTheme.Light">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
    </style>

    <style name="AppTheme.Dark.Indigo" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
    </style>

    <style name="AppTheme.Light.Purple" parent="AppTheme.Light">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
    </style>

    <style name="AppTheme.Dark.Purple" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
    </style>

    <style name="AppTheme.Light.Red" parent="AppTheme.Light">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
    </style>

    <style name="AppTheme.Dark.Red" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
    </style>


    <style name="style_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>


    <!--==============================-->
    <style name="gListNameMain" parent="TextAppearance.AppCompat">

        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:textColor">?attr/bg_text_main</item>


        <!--        <item name="android:layout_weight">1</item>-->
    </style>


    <style name="gListNameSub" parent="gListNameMain">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/bg_text_sub</item>
    </style>
    <!--==============================-->


    <style name="gInfoNameMain" parent="gListNameMain">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gInfoNameSub" parent="gListNameMain">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="style_name_setting_info" parent="@android:style/TextAppearance.Small">
        <!--<item name="android:textAllCaps">true</item>-->
        <item name="android:typeface">monospace</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>

        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
    </style>


    <style name="style_value_setting_info" parent="style_name_setting_info">
        <item name="android:layout_weight">0</item>


        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>


        <!--<item name="android:layout_weight">1</item>-->
    </style>

    <style name="style_es" parent="style_value_setting_info">
        <!-- <item name="android:textStyle">italic</item>-->

        <item name="android:text">"es"</item>


        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="style_ei" parent="style_es">
        <item name="android:text">"ei"</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">bottom</item>
        <!--<item name="android:gravity">bottom</item>-->
    </style>


</resources>
